@page
@model Razor__ProjectE_.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/Categories/Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var item in Model.CategoryList.OrderByDescending(x=>x.DisplayOrder))
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.DisplayOrder</td>
					<td style="width:155px;">
						<a asp-page="/Categories/Edit" asp-route-Id="@item.Id" class="btn btn-primary rounded">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
					</td>
					<td style="width:175px;">
						<a asp-page="/Categories/Delete" asp-route-Id="@item.Id" class="btn btn-danger rounded">
							<i class="bi bi-trash"></i> Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>