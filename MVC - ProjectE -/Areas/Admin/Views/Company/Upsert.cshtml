@model Company

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light" style="font-family:'Cambria Math'"> @(Model.Id!=0?"Update" : "Create") Company</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post" asp-action="Upsert" class="row">
			<input type="hidden" asp-for="@Model.Id" />
			<div class="row">
				<div class="col-10">
					<div class="border p-3">

						<div class="form-floating py-2 col-12">
							<input type="text" asp-for="Name" class="form-control border-0 shadow" />
							<label asp-for="Name" class="ms-2"> </label>
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input type="text" asp-for="City" class="form-control border-0 shadow" />
							<label asp-for="City" class="ms-2"> </label>
							<span asp-validation-for="City" class="text-danger"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input type="text" asp-for="State" class="form-control border-0 shadow" />
							<label asp-for="State" class="ms-2"> </label>
							<span asp-validation-for="State" class="text-danger"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input type="text" asp-for="StreetAddress" class="form-control border-0 shadow" />
							<label asp-for="StreetAddress" class="ms-2"> </label>
							<span asp-validation-for="StreetAddress" class="text-danger"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input type="text" asp-for="PostalCode" class="form-control border-0 shadow" />
							<label asp-for="PostalCode" class="ms-2"> </label>
							<span asp-validation-for="PostalCode" class="text-danger"></span>
						</div>
						<div class="form-floating py-2 col-12">
							<input type="text" asp-for="PhoneNumber" class="form-control border-0 shadow" />
							<label asp-for="PhoneNumber" class="ms-2"> </label>
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>

						<div class="row pt-4">
							<div class="col-6">
								@if (Model.Id != 0)
								{
									<button type="submit" class="btn btn-primary" style="width:250px">Update</button>
								}
								else
								{
									<button type="submit" class="btn btn-primary" style="width:250px">Create</button>
								}
							</div>
							<div class="col-6 text-end">
								<a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border" style="width:250px">Back</a>
							</div>
						</div>

					</div>
				</div>
			</div>	
		</form>
	</div>
</div>



@section scripts {
	<script>
		tinymce.init({
		  selector: 'textarea',
		  plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount',
		  toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | numlist bullist indent outdent | removeformat',
		});
	</script>
