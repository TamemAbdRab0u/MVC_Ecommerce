@model Category

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light" style="font-family:'Cambria Math'">Delete Category</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post" asp-controller="Category" asp-action="SaveDelete" asp-route-Id="@Model.Id">
			<div class="border p-3">

				<div class="form-floating py-2 col-12">
					<input type="text" asp-for="Name" disabled class="form-control border-0 shadow" />
					<label asp-for="Name" class="ms-2"> </label>
				</div>
				<div class="form-floating py-2 col-12">
					<input type="text" asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
					<label asp-for="DisplayOrder" class="ms-2"> </label>
				</div>

				<div class="row pt-4">
					<div class="col-6">
						<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
					</div>
					<div class="col-6 text-end">
						<a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border" style="width:150px">Back</a>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>

