@model List<Category>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light" style="font-family:'Cambria Math'">Category List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-4">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create New Category
				</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Category Name</th>
					<th>Display Order</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model.OrderByDescending(x => x.DisplayOrder))
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.DisplayOrder</td>
						<td style="width:155px;">
							<a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary rounded-1">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
						</td>
						<td style="width:175px;">
							<a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger rounded-1">
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

